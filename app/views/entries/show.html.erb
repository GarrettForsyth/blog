<div class="main-container">
  <%= image_tag @entry.display_image, class: "entry-show-image" if @entry.image.attached? %> 
  <h1 class="entry-show-title"> <%= @entry.title %> </h1>
  <p class="entry-show-date"> <%= @entry.created_at.strftime("%Y-%m-%d") %> </p>
  <p class="entry-show-abstract"> <%= @entry.abstract %> </p>
  <%= render @entry.sections %> 
</div>
