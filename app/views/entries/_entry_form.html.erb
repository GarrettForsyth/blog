<%= form_with model: @entry, id: 'new-entry-form', local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <ul>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title, class: "title-field", placeholder: "Entry title.." %>
    </li>
    <li>
      <%= f.label :title_image %> 
      <%= f.file_field :image %> 
    </li>
    <li>
      <%= f.label :abstract %>
      <%= f.text_area :abstract, class: "abstract-field", placeholder: "Entry abstract.." %>
    </li>
    <div id="section-fields-container">
      <%= f.fields_for :sections do |f2| %>
        <%= render 'section_fields', f: f2 %>
      <% end %>
    </div>
    <li>
      <%= link_to_add_nested_fields 'Add new section', f, :sections, :code_snippet %>
    </li>
    <li>
      <%= f.submit 'Submit Entry', class: 'submit-btn' %>
    </li>
  </ul>
<% end %>
